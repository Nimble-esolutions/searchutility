# OpenTelemetry Configuration Template
# Copy this to .env and adjust values as needed

# Service Information
OTEL_SERVICE_NAME=ai-document-search
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=development

# Jaeger Configuration
OTEL_ENABLE_JAEGER=true
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=14268
OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Prometheus Configuration
OTEL_ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# OTLP Configuration (for other backends)
OTEL_ENABLE_OTLP=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Sampling Configuration
OTEL_TRACES_SAMPLER=always_on
OTEL_TRACES_SAMPLER_ARG=1.0

# Resource Attributes
OTEL_RESOURCE_ATTRIBUTES=service.name=ai-document-search,service.version=1.0.0,deployment.environment=development

# Logging Configuration
OTEL_LOG_LEVEL=INFO
OTEL_PYTHON_LOG_CORRELATION=true

# Metrics Configuration
OTEL_METRICS_EXPORT_INTERVAL_MILLIS=10000
OTEL_METRICS_EXPORT_TIMEOUT_MILLIS=30000

# Traces Configuration
OTEL_BSP_SCHEDULE_DELAY_MILLIS=5000
OTEL_BSP_EXPORT_TIMEOUT_MILLIS=30000
OTEL_BSP_MAX_EXPORT_BATCH_SIZE=512
